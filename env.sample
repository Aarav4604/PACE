# PACE Environment Variables Sample
# Copy this file to .env and update the values for your environment

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pace_user
DB_PASSWORD=pace_password
DB_NAME=pace_db
DATABASE_URL=postgresql://pace_user:pace_password@localhost:5432/pace_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# Kafka Configuration
# ============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PILOT_TRADES=pilot_trades

# ============================================================================
# Authentication & Security
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# ============================================================================
# API Configuration
# ============================================================================
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=development

# ============================================================================
# Python Services Configuration
# ============================================================================
INGEST_PORT=8001
RISK_PORT=8002
ALPACA_WEBHOOK_SECRET=your-alpaca-webhook-secret
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key

# ============================================================================
# Mobile App Configuration
# ============================================================================
MOBILE_API_URL=http://localhost:3000/api/v1
MOBILE_WS_URL=ws://localhost:3000/ws

# ============================================================================
# External Services
# ============================================================================
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# ============================================================================
# AWS Configuration (for production)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=pace-assets
AWS_ECR_REGISTRY=your-ecr-registry

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_REAL_TRADING=false
ENABLE_RISK_CALCULATIONS=true
ENABLE_WEBSOCKET=true
ENABLE_KAFKA=true

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_MOCK_DATA=true 